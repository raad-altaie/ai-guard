{
    "manifest_version": 3,
    "name": "AI Guard",
    "version": "1.0",
    "description": "AI Guard checks website safety and displays a visual indicator.",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "ai-websites.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_title": "AI Guard",
        "default_icon": {
            "128": "images/ai.png"
        }
    },
    "icons": {
        "128": "images/ai.png"
    }
}